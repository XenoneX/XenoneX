//output:product.html
- var url = "product"
doctype html
html(lang='ru', dir='ltr')
  head
    meta(charset='utf-8')
    title Главная страница
    link(rel='stylesheet', href='css/styles.css')
  body
    .container
      include ./navbar.jade
      .body
        .menu-links
          .links-wrapper
            ul
              li
                a.active(href="#") Все
              li
                a(href="#") Дом
              li
                a(href="#") Офис
              li
                a(href="#") Мебель
              li
                a(href="#") Современное
              li
                a(href="#") Классическое
        .product-info.row
          .half
            .product-image
              img(alt="picture", width=570, height=570, src="img/slider1.jpg")
            .product-thumbs-list
              ul
                li
                  img(alt="picture", width=70, height=70, src="img/controll11.jpg")
                li
                  img(alt="picture", width=70, height=70, src="img/controll2.jpg")
                li
                  img(alt="picture", width=70, height=70, src="img/controll.jpg")
          .half
            h2.product-title Стул
            h3.tag Горячее проедложение
            p.price
              span.sign &#8381;
              span.count=" 124.35 "
              span.measures за шт.
            a.btn(href="#") Заказать
